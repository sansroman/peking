<h1>Listing Answers</h1>

<table>
  <thead>
    <tr>
      <th>Score</th>
      <th>Content</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for answer <- @answers do %>
    <tr>
      <td><%= answer.score %></td>
      <td><%= answer.content %></td>

      <td>
        <%= link "Show", to: Routes.answer_path(@conn, :show, answer) %>
        <%= link "Edit", to: Routes.answer_path(@conn, :edit, answer) %>
        <%= link "Delete", to: Routes.answer_path(@conn, :delete, answer), method: :delete, data: [confirm: "Are you sure?"] %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Answer", to: Routes.answer_path(@conn, :new) %></span>
